<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mauchudao">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarXnTT"
        app:title="Xác nhận thanh toán"
        android:layout_width="match_parent"
        android:background="@color/green"
        app:titleTextColor="@color/white"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/green"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_app"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AppFood"
            android:textColor="#686666"
            android:textSize="30sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:layout_margin="15dp"
        android:background="@color/mausp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Thanh toán thành công"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:textStyle="bold" />

            <TextView
                android:id="@+id/xntongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/tenKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Tên khách hàng"
            android:textColor="@color/green"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tenkh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Tên khách hàng loading ..."
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/GmaiKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Gmail:"
            android:textColor="@color/green"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/gmailkh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Gmail loading"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/SđtKh"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Số điện thoại"
            android:textColor="@color/green"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/sdtkh"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Số điện thoại loading"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/velaitrangchu"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/green"
            android:text="Về trang chủ"/>
    </LinearLayout>
</LinearLayout>
