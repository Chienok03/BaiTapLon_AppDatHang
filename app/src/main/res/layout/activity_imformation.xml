<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mauchudao">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTT"
        app:title="Thanh Toán"
        android:background="@color/green"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:background="@color/green"
        android:gravity="center"
        android:layout_marginTop="1dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_app"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="AppFood"
            android:textColor="#686666"
            android:textSize="25sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="453dp"
        android:layout_marginTop="25dp"
       android:layout_gravity="center"
        android:background="@color/mausp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Thông tin thanh toán"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Tổng cộng:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Tên khách hàng"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên khách hàng"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:text=""
            android:padding="15dp">

        </EditText>

        <TextView
            android:id="@+id/GmailProdcut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="Gmail:"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/gmailprodcut"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:text=""
            android:layout_height="wrap_content"
            android:hint="user123@gmail.com"
            android:padding="15dp">

        </EditText>

        <TextView
            android:id="@+id/SdtProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textColor="@color/green"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/sdtproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:inputType="phone"
            android:layout_marginRight="10dp"
            android:hint="Nhập số điện thoại"
            android:padding="15dp">

        </EditText>

        <Button
            android:id="@+id/ThanhToan"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/green"
            android:text="Thanh Toán"/>
    </LinearLayout>
</LinearLayout>
