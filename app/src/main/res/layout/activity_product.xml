<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_product.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/mauchudao">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarSP"
        app:title="Sản Phẩm"
        android:background="@color/green"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/anh1"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:src="@drawable/mucsao" />

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_gravity="center"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bun đậu mắn tôm"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/GiaSp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:text="Giá:"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:text="12"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/Donvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:layout_marginLeft="5dp"
        android:text="đ"
        android:textSize="16sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/soluongsp"
            android:layout_width="80dp"
            android:textColor="@color/green"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số lượng:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/productNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:text=""
            android:hint="0"/>
    </LinearLayout>
    <Button
        android:id="@+id/viewProductButton"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/green"
        android:layout_height="wrap_content"
        android:text="Thêm vào giỏ hàng"
       />

    <!-- Thêm các thành phần giao diện khác tại đây nếu cần -->
</LinearLayout>
